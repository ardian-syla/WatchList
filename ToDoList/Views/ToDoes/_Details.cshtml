@model ToDoList.Models.ToDo

<div class="modal fade" id="detailsModal-@Model.Id" tabindex="-1" role="dialog" aria-labelledby="detailsModalLabel-@Model.Id" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailsModalLabel-@Model.Id">Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>@Model.Description</p>
                <p>@Model.isDone</p>
                <p>@Model.CreatedOn</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
